<% @habits.each do |habit| %>
  <div class="habit-show-card mb-4">
    <% if habit.photo.present? %>
      <div class="habit-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path habit.photo.key, height: 337, width: 340, crop: :fill, gravity: :face %>')">
      <div class="habit-image-title-area"><h2><%= habit.title.titleize %></h2></div>
      </div>
    <% end %>

    <div class="habit-content">
      <% if habit.photo.present? %>
      <% else %>
      <h2><%= habit.title.titleize %></h2>
      <% end %>
      <p><strong>User ID: </strong><%= habit.user_id %></p>
      <p><strong>Relationship ID: </strong><%= habit.relationship_id %></p>
      <p><strong>Category: </strong><%= habit.category %></p>
      <p><strong>Identity Goal: </strong><%= habit.identity_goal %></p>
      <p><strong>Week Recurrence: </strong><%= habit.week_recurrence %></p>
      <p><strong>Trigger: </strong><%= habit.trigger %></p>
      <p><strong>Reward: </strong><%= habit.reward %></p>
      <p><strong>Duration in Minutes: </strong><%= habit.duration_in_minutes %></p>
      <p><strong>Days of Week: </strong><%= habit.days_of_week %></p>
      <p><strong>Start time/at: </strong><%= habit.relationship_id %></p>
      <p><strong>Current Streak: </strong><%= habit.current_streak %></p>
      <p><strong>Best Streak: </strong><%= habit.best_streak %></p>
      <p><strong>Create at: </strong><%= habit.created_at %></p>
      <p class="mb-5"><strong>Updated at: </strong><%= habit.updated_at %></p>
    </div>
  </div>
<% end %>
